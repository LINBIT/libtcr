override CFLAGS  += @CFLAGS@
override LDFLAGS :=-lpthread -g

####

export CFLAGS LDFLAGS

.PHONY: tests libtcr.a clean man-pages

all: libtcr.a tests man-pages

tests:
	$(MAKE) -r -C tests

clean:
	$(MAKE) -C tcr clean
	$(MAKE) -r -C tests clean
	$(MAKE) -C man-pages clean

libtcr.a:
	$(MAKE) -C tcr

man-pages:
	$(MAKE) -C man-pages
